<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/main_layout_color"
    >
    <LinearLayout
        android:id="@+id/account_ll"
        style="@style/login_layout_style"
        android:gravity="center_vertical"
        android:layout_marginTop="83dp">
        <ImageView
            android:background="@mipmap/account"
            android:id="@+id/phone_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"/>
        <EditText
            android:hint="11位手机号码"
            android:id="@+id/register_phone"
            android:layout_toRightOf="@+id/phone_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="验证码"
            android:id="@+id/register_identifying_code_tv"
            android:gravity="center"
            android:background="@mipmap/only_to_see_the_louzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_password"
        style="@style/login_layout_style"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/pwd_img"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/register_identifying_code_et"
            android:hint="手机验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        style="@style/login_layout_style"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_gravity="center_vertical"
            android:background="@mipmap/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="6-32位密码"
            android:id="@+id/register_password"
            android:password="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/register_register"
        android:layout_marginTop="10dp"
        android:text="注册"
        android:textColor="@android:color/white"
        android:background="@drawable/circle_corner_bg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>