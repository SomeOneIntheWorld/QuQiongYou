<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:background="@drawable/shadow_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img"
        android:background="@color/colorPrimary"
        android:layout_width="100dp"
        android:layout_height="80dp" />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/img"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:text="皮艇火车探险"
            android:textSize="30sp"
            style="@style/deep_tv_style" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:text="@string/left_time"
                android:textSize="20sp"
                style="@style/deep_tv_style" />
            <TextView
                android:id="@+id/hour"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:background="@drawable/circle_corner_bg3"
                android:text="00"
                android:textColor="@android:color/white"
                android:textSize="@dimen/time_tv_size"
                style="@style/normal_tv_style" />
            <TextView
                android:text=" : "
                android:textColor="@color/time_bg_color"
                style="@style/normal_tv_style" />
            <TextView
                android:id="@+id/min"
                android:padding="3dp"
                android:background="@drawable/circle_corner_bg3"
                android:text="00"
                android:textColor="@android:color/white"
                android:textSize="@dimen/time_tv_size"
                style="@style/normal_tv_style" />
            <TextView
                android:text=" : "
                android:textColor="@color/time_bg_color"
                style="@style/normal_tv_style" />
            <TextView
                android:id="@+id/second"
                android:padding="3dp"
                android:background="@drawable/circle_corner_bg3"
                android:text="00"
                android:textColor="@android:color/white"
                android:textSize="@dimen/time_tv_size"
                style="@style/normal_tv_style" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            >
            <TextView
                android:id="@+id/sponsor_activity"
                android:text="活动"
                android:background="@drawable/circle_corner_bg4_fuckticket_head"
                android:padding="5dp"
                android:textSize="@dimen/item_fuckticket_head_tv_size"
                style="@style/deep_tv_style" />
            <TextView
                android:id="@+id/best_tv"
                android:layout_toRightOf="@+id/sponsor_activity"
                android:layout_marginLeft="10dp"
                android:text="报名中"
                android:textSize="@dimen/item_fuckticket_head_tv_size"
                android:background="@drawable/circle_corner_bg4_fuckticket_head"
                android:padding="5dp"
                style="@style/deep_tv_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/item_fuckticket_head_tv_size"
                android:text="报名:26"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>