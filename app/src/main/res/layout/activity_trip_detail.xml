<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.Toolbar
    style="@style/ToolbarStyle">
    <ImageView
        android:src="@drawable/back"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        style="@style/deep_tv_style"
        android:layout_gravity="center"
        android:textSize="@dimen/toolbar_title_size"
        android:text="@string/tripDetail"/>
</android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/tripImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tripName"
                style="@style/normal_tv_style"/>
            <TextView
                android:id="@+id/peopleNum"
                style="@style/normal_tv_style"/>
            <TextView
                android:id="@+id/seenNum"
                style="@style/normal_tv_style"/>
            <TextView
                android:id="@+id/begin_time"
                style="@style/normal_tv_style"/>
            <TextView
                android:id="@+id/end_time"
                style="@style/normal_tv_style"/>
            <TextView
                android:id="@+id/tripLocation"
                style="@style/normal_tv_style"/>
            <TextView
                android:id="@+id/consumeNum"
                style="@style/normal_tv_style"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>